 <!-- menu -->
 <div class="list-group">

    <a href="/blogs" class="list-group-item list-group-item-action ">Tum kategoriler</a>

    <% categories.forEach(function (category) { %>
       <a href="/blogs/category/<%= category.categoryid %>" 
         class="list-group-item list-group-item-action 
           <%= selectedCategory == category.categoryid ? 'active': ' ' %> "> <!-- id varsa active yoksa '' bosh gondercek-->
            <%= category.name %>
      </a>
   <%  }) %>
   
</div>